<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    
    <LinearLayout
        android:background="@color/purple"
        android:id="@+id/linear_bar"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_all"
            android:layout_weight="1"
            android:src="@drawable/ic_all_inclusive"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/image_happy"
            android:layout_weight="1"
            android:src="@drawable/ic_happy"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/image_sunny"
            android:layout_weight="1"
            android:src="@drawable/ic_sunny"
            android:layout_width="0dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_userName"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/cabin"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linear_bar"
        android:text="@string/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/text_motivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/cabin"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/phrases_motivation"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <View
        android:elevation="10dp"
        android:background="@color/dark_purple"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_motivation"
        android:layout_width="128dp"
        android:layout_height="5dp" />

    <Button
        android:id="@+id/buttonNewPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/dark_purple"
        android:fontFamily="@font/cabin"
        android:text="@string/new_phrase" />

</RelativeLayout>